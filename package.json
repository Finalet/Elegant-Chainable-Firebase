{
  "name": "elegant-chainable-firebase",
  "description": "Chainable, typed Firestore and Storage Admin SDK wrapper for Node.js.",
  "version": "0.2.2",
  "files": [
    "dist"
  ],
  "exports": {
    "./firestore": {
      "types": "./dist/firestore/index.d.ts",
      "import": "./dist/firestore/index.mjs",
      "require": "./dist/firestore/index.js"
    },
    "./storage": {
      "types": "./dist/storage/index.d.ts",
      "import": "./dist/storage/index.mjs",
      "require": "./dist/storage/index.js"
    },
    "./storage/types": {
      "types": "./dist/storage/types/index.d.ts",
      "import": "./dist/storage/types/index.mjs",
      "require": "./dist/storage/types/index.js"
    },
    "./firestore/types": {
      "types": "./dist/firestore/types/index.d.ts",
      "import": "./dist/firestore/types/index.mjs",
      "require": "./dist/firestore/types/index.js"
    }
  },
  "scripts": {
    "build": "npm run lint && tsup",
    "lint": "eslint src"
  },
  "keywords": [
    "firebase",
    "firestore",
    "storage",
    "admin-sdk",
    "typescript",
    "typed",
    "chainable"
  ],
  "author": "Grant Oganyan",
  "license": "Apache-2.0",
  "homepage": "https://github.com/Finalet/Elegant-Chainable-Firebase",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Finalet/Elegant-Chainable-Firebase.git"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "eslint": "^9.32.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  },
  "dependencies": {
    "firebase-admin": "^13.4.0"
  }
}
